<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        @external .searchedIri;
        .main {
            display: flex;
            align-items: center;
            flex-direction: row;
            font-size: 12px;
            white-space: nowrap;
            padding: 2px;
            border-bottom: 1px solid literal("var(--separator--color)");
            cursor: default !important;
        }
        .main:hover {
            background-color: literal("var(--item--hover--background-color)");
        }
        .entityRendering {
            display: inline-block;
            flex-grow: 0;
            flex-shrink: 0;
            flex-basis: 180px;
            overflow: hidden;
            margin-right: 0.5em;
        }
        .main .searchedIri {
            color: literal("var(--secondary--color)") !important;
            padding-bottom: 10px;
        }
        .matchesContainer {
            flex-grow: 1;
            flex-shrink: 1;
            min-width: 20px;
        }
        .matchesContainer div {
            padding-top: 1px;
            padding-bottom: 1px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:HTML ui:field="entityRenderingField" addStyleNames="{style.entityRendering}"/>
        <g:HTMLPanel ui:field="matchesContainer" addStyleNames="{style.matchesContainer}">
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>