<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:primitive="urn:import:edu.stanford.bmir.protege.web.client.primitive"
             xmlns:form="urn:import:edu.stanford.bmir.protege.web.client.form">
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .valueField {
            flex-basis: 200px;
            flex-shrink: 1;
            flex-grow: 0;
        }
        .labelField {
            flex-grow: 1;
            flex-shrink: 1;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{wp.style.formGroupRow}">
            <g:HTMLPanel addStyleNames="{wp.style.formGroup} {style.valueField}">
                <g:Label text="Choice Value" addStyleNames="{wp.style.formLabel}"/>
                <primitive:PrimitiveDataEditor ui:field="primitiveDataEditor" classesAllowed="true" namedIndividualsAllowed="true"/>
            </g:HTMLPanel>
            <g:HTMLPanel addStyleNames="{wp.style.formGroup} {style.labelField}">
                <g:Label text="Choice Label" addStyleNames="{wp.style.formLabel}"/>
                <form:LanguageMapEditor ui:field="labelEditor"/>
            </g:HTMLPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
