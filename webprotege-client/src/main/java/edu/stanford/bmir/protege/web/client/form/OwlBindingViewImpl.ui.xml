<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:primitive="urn:import:edu.stanford.bmir.protege.web.client.primitive">
    <ui:with field="counter" type="edu.stanford.bmir.protege.web.client.ui.Counter"/>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .propertyBindingEditor {
            margin-left: 3em;
            margin-top: 0.4em;
            margin-bottom: 0.6em;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:RadioButton ui:field="propertyRadioButton" name="binding-{counter.getValue}" text="Relationship"/>
        <g:HTMLPanel addStyleNames="{style.propertyBindingEditor} {wp.style.formGroupNarrow}">
            <primitive:PrimitiveDataEditor ui:field="propertyField" objectPropertiesAllowed="true"
                                           dataPropertiesAllowed="true" annotationPropertiesAllowed="true" placeholder="Enter property name"/>
        </g:HTMLPanel>
        <g:RadioButton ui:field="classRadioButton" name="binding-{counter.getValue}" text="Parent Class/Type"/>
        <g:RadioButton ui:field="instanceRadioButton" name="binding-{counter.getValue}" text="Instance"/>
    </g:HTMLPanel>
</ui:UiBinder>
