<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:editor="urn:import:edu.stanford.bmir.protege.web.client.editor"
             xmlns:frame="urn:import:edu.stanford.bmir.protege.web.client.frame">
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:with field="counter" type="edu.stanford.bmir.protege.web.client.ui.Counter"/>
    <g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
            <g:Label addStyleNames="{wp.style.formLabel}" text="Sub-Form Subject Type"/>
            <g:RadioButton value="true" name="subjectEntityType-{counter.getValue}" text="Class" ui:field="classRadio"/>
            <g:RadioButton name="subjectEntityType-{counter.getValue}" text="Individual" ui:field="individualRadio"/>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
            <g:Label addStyleNames="{wp.style.formLabel}" text="Subject parents"/>
            <editor:ValueListEditor ui:field="parentsList"/>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
            <g:Label addStyleNames="{wp.style.formLabel}" text="Subject annotations"/>
            <frame:PropertyValueListEditor ui:field="annotationsList"/>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
            <g:SimplePanel ui:field="subFormContainer"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
