<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:button="urn:import:edu.stanford.bmir.protege.web.client.library.button">
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .main {
            display: flex;
            flex-direction: column;
        }
        .viewsContainer {
            display: flex;
            flex-direction: column;
            align-items: baseline;
        }
        .addButton {
            align-self: start;
        }
    </ui:style>

    <g:HTMLPanel addStyleNames="{style.main}">
        <g:FlowPanel ui:field="criteriaViewsContainer" addStyleNames="{style.viewsContainer}"/>
        <g:Button ui:field="addButton" text="Add" addStyleNames="{style.addButton} {wp.buttons.button} {wp.buttons.addTabButton} {wp.buttons.smallPageButton}"/>
    </g:HTMLPanel>
</ui:UiBinder>