<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:button="urn:import:edu.stanford.bmir.protege.web.client.library.button">
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .main {
            display: flex;
            flex-direction: column;
            justify-content: space-around;
        }
        .viewsContainer {
            display: flex;
            flex-direction: column;
            align-items: stretch;
        }
        .operatorContainer {
            align-self: flex-start;
            padding-top: 2px;
            padding-bottom: 2px;
            font-weight: 500;
        }
        .operatorListBox {
            display: inline-block;
        }
        .addButton {
            align-self: flex-start;
            position: relative;
        }
    </ui:style>

    <g:HTMLPanel addStyleNames="{style.main}">
        <g:HTMLPanel addStyleNames="{style.operatorContainer}">
            <g:InlineLabel ui:field="matchTextPrefix" text="Match"/>
            <g:ListBox visibleItemCount="1" addStyleNames="{style.operatorListBox}">
                <g:item>all</g:item>
                <g:item>any</g:item>
                <g:item>none</g:item>
            </g:ListBox> of the following:
        </g:HTMLPanel>
        <g:FlowPanel ui:field="criteriaViewsContainer" addStyleNames="{style.viewsContainer}"/>
        <g:Button ui:field="addButton" addStyleNames="{wp.buttons.addButton} {style.addButton}">
            <div style="position: relative; top:-0.2em;">+</div>
        </g:Button>
    </g:HTMLPanel>
</ui:UiBinder>