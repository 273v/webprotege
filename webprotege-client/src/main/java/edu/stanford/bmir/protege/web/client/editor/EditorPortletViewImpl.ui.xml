<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        @external .gwt-TabBar;
        @external .gwt-TabBarItem;
        @external .gwt-TabBarItem-selected;
        .main {
            display: flex;
            flex-direction: column;
            align-items: stretch;
        }
        .tabBar {
            background-color: literal("var(--alternate--background-color)");
            padding-top: 4px;
            padding-bottom: 4px;
            border-top: 1px solid var(--alternate--separator--color);
        }
        .tagListContainer {
            padding-top: 2px;
            padding-right: 2px;
            padding-left: 2px;
            flex-grow: 0;
            flex-shrink: 0;
        }
        .container {
            position: relative;
            flex-grow: 1;
            flex-shrink: 1;
        }
        .content {
            position: relative;
            flex-grow: 1;
            flex-shrink: 1;
        }
        .container > div {
            position: absolute;
            left: 0;
            right: 0;
            top: 0;
            bottom: 0;
        }
        .container > div > div {
            position: absolute;
            left: 0;
            right: 0;
            top: 0;
            bottom: 0;

        }

        .main .gwt-TabBar {

        }
        .main .gwt-TabBarItem {
            font-weight: 400;
            padding-top: 2px;
            padding-bottom: 2px;
            cursor: pointer;
            text-align: center;
            border-bottom: 2px solid transparent;
            outline: none;
            margin-right: 10px;

        }
        .main .gwt-TabBarItem-selected {
            color: literal("var(--selected-tab--color)");
            border-bottom: 2px solid literal("var(--selected-tab--color)");

        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:TabBar ui:field="tabBar" addStyleNames="{style.tabBar}"/>
        <g:SimplePanel ui:field="tagListViewContainer" addStyleNames="{style.tagListContainer}"/>
        <g:SimplePanel ui:field="paneContainer" addStyleNames="{style.container}"/>
    </g:HTMLPanel>
</ui:UiBinder>