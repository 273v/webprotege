<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:primitive="urn:import:edu.stanford.bmir.protege.web.client.primitive">
    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.Messages"/>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .main {
            display: flex;
            flex-direction: column;
            align-items: stretch;
        }
        .classFieldRow {
            display: flex;
            flex-direction: row;
            flex-grow: 0;
            flex-shrink: 0;
        }
        .classField {
            flex-grow: 1;
            flex-shrink: 1;
            margin-left: 2px;
        }
        .classNavButton {
            flex-grow: 0;
            flex-shrink: 0;
            margin: 2px;
        }
        .moveToChildButton {
            margin-left: 20px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:Button ui:field="moveToParentButton" title="{msg.moveToParent}" addStyleNames="{wp.buttons.moveToParent} {style.classNavButton}"/>
        <div class="{style.classFieldRow}">
            <primitive:PrimitiveDataEditorImpl ui:field="entityField"
                                               classesAllowed="true"
                                               enabled="true"
                                               placeholder="Type a class name"
                                               addStyleNames="{style.classField}"/>
            <g:Button ui:field="moveToSiblingButton" title="{msg.moveToSibling}" addStyleNames="{wp.buttons.moveToSibling} {style.classNavButton}"/>
        </div>
        <g:Button ui:field="moveToChildButton" title="{msg.moveToChild}" addStyleNames="{wp.buttons.moveToChild} {style.moveToChildButton} {style.classNavButton}"/>
    </g:HTMLPanel>
</ui:UiBinder>