<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:viz="urn:import:edu.stanford.bmir.protege.web.client.viz">
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>

        .main {
            display: flex;
            flex-direction: column;
            align-items: stretch;
            box-sizing: border-box;
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
        }

        .canvas {
            flex-grow: 1;
            flex-shrink: 1;
            position: relative;
        }
        .canvas svg {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        .settingsBar {
            flex-grow: 0;
            flex-shrink: 0;
            display: flex;
            flex-direction: row;
            padding: 2px;
            align-items: center;
            border-top: 1px solid literal("var(--alternate--separator--color)");
        }

        .download {
            justify-self: flex-end;
        }
        .spacer {
            flex-grow: 1;
            flex-shrink: 1;
        }
        .textMeasurer {
            position: absolute;
            visibility: hidden;
            width: auto;
            height: auto;
            white-space: nowrap;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <viz:TextMeasurerImpl ui:field="textMeasurer" addStyleNames="{style.textMeasurer}"/>
        <g:HTMLPanel ui:field="canvas" addStyleNames="{style.canvas}"/>
        <g:HTMLPanel addStyleNames="{style.settingsBar} {wp.style.panelFilled}">
            <div class="{style.spacer}"/>
            <g:Button ui:field="downloadButton" title="download" addStyleNames="{style.download} {wp.buttons.btnGlyph} {wp.buttons.download}"/>
        </g:HTMLPanel>
        <!--<g:HTMLPanel addStyleNames="{style.canvasHolder}">-->
            <!---->
        <!--</g:HTMLPanel>-->
    </g:HTMLPanel>
</ui:UiBinder>
