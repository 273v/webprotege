<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:editor="urn:import:edu.stanford.bmir.protege.web.client.editor">
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.Messages"/>
    <ui:style>
        .main {
            display:        flex;
            flex-direction: column;
        }

        .langList {
            margin-bottom: 4px;
        }

        .helpText {
            width: 390px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main} {wp.style.form} {wp.style.panelFilled}">
        <div class="{wp.style.formGroup}">
            <g:Label text="Primary Display Name" addStyleNames="{wp.style.formLabel}"/>
            <editor:ValueListFlexEditorImpl enabled="true" newRowMode="MANUAL"
                                            ui:field="primaryDisplayNameLanguages" addStyleNames="{style.langList}"/>
            <g:Label
                    text="The primary display name is used as the display name for entities throughout the user interface.  Specify a list of property language pairs that should be used to generate the display name.  Leave blank to use the project default."
                    addStyleNames="{style.helpText} {wp.style.formHelpText}"/>

        </div>
        <div class="{wp.style.formGroup}">
            <g:Label text="Secondary Display Name" addStyleNames="{wp.style.formLabel}"/>
            <editor:ValueListFlexEditorImpl enabled="true" newRowMode="MANUAL"
                                            ui:field="secondaryDisplayNameLanguages" addStyleNames="{style.langList}"/>
            <g:Label
                    text="The secondary display name is displayed along side the primary display name in hierarchies and lists of entities.  Specify a list of property language pairs that should be used to generate the display name.  Leave blank to use the project default."
                    addStyleNames="{style.helpText} {wp.style.formHelpText}"/>

        </div>
    </g:HTMLPanel>
</ui:UiBinder>