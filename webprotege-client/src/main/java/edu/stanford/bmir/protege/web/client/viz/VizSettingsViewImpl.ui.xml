<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.Messages"/>
    <ui:style>
        .main {
            display: flex;
            flex-direction: column;
            width: 100%;
            height: 100%;
        }
        .container {
            padding: 1em;
            flex-grow: 1;
            flex-shrink: 1;
            overflow: auto;
        }
        .buttonBar {
            display: flex;
            flex-direction: row;
            justify-content: flex-end;
            padding: 3px;
            flex-grow: 0;
            flex-shrink: 0;
            border-top: 1px solid literal("var(--alternate--separator--color)");
        }
        .criteria {
            flex-grow: 1;
            flex-shrink: 1;
            overflow: scroll;
            padding: 1em;
            width: 100%;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main} {wp.style.panelFilled}">
        <g:HTMLPanel addStyleNames="{style.criteria}">
            <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
                <g:Label addStyleNames="{wp.style.formLabel}" text="Included Edges"/>
                <g:Label addStyleNames="{wp.style.formHelpText}" text="Specify a list of criteria below that will be used to determine whether a given edge should be included in the entity graph.  Leave empty to include all types of edges by default."/>
                <g:SimplePanel ui:field="includeCriteriaContainer" addStyleNames="{style.container}"/>
            </g:HTMLPanel>
            <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
                <g:Label addStyleNames="{wp.style.formLabel}" text="Excluded edges"/>
                <g:Label addStyleNames="{wp.style.formHelpText}" text="Specify a list of criteria below that will be used to determine whether a given edge should be excluded from the entity graph.   Leave empty to include all types of edges by default."/>
                <g:SimplePanel ui:field="excludeCriteriaContainer" addStyleNames="{style.container}"/>
            </g:HTMLPanel>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{style.buttonBar}">
            <g:HTMLPanel>
                <g:Button ui:field="applyButton" text="{msg.dialog_apply}"
                          addStyleNames="{wp.buttons.button} {wp.buttons.smallPageButton} {wp.buttons.primaryButton}"/>
            </g:HTMLPanel>
            <g:HTMLPanel>
                <g:Button ui:field="cancelButton" text="{msg.dialog_cancel}"
                          addStyleNames="{wp.buttons.button} {wp.buttons.smallPageButton} {wp.buttons.secondaryButton}"/>
            </g:HTMLPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
