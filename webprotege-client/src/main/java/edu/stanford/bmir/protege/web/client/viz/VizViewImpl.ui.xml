<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        @external .node;
        @external .edge;
        .main {
            position: relative;
        }
        .focusPanel {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            overflow: auto;
        }
        .node text, .edge text {
            font-family: inherit;
            font-size: 8px;
        }
        .edge text {
        }
        .edge path {
            stroke-width: 0.5;
        }
        .edge polygon {
            stroke-linejoin: round;
            stroke-linecap: round;
            stroke-width: 1;
        }
        .node polygon {
            stroke-width: 0.6;
            stroke-linejoin: round;
        }
        .container {
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:FocusPanel ui:field="focusPanel" addStyleNames="{style.focusPanel}">
            <g:HTML ui:field="imageContainer" addStyleNames="{style.container}"/>
        </g:FocusPanel>
    </g:HTMLPanel>
</ui:UiBinder>