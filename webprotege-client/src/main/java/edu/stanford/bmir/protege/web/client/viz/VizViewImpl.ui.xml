<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        @external .node;
        @external .edge;
        .node text, .edge text {
            font-family: inherit;
            font-size: 8px;
        }
        .edge text {
            /*transform: translateX(-10px);*/
        }
        .edge path {
            /*stroke: literal("var(--primary--color)");*/
        }
        .edge polygon {
            /*stroke: literal("var(--primary--color)");*/
            stroke-linejoin: round;
            stroke-linecap: round;
            /*fill: none;*/
        }
        .node polygon {
            stroke: #a0a0a0;
            stroke-linejoin: round;
        }
        .container {
            touch-action: pinch-zoom;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:HTML ui:field="imageContainer" addStyleNames="{style.container}"/>
    </g:HTMLPanel>
</ui:UiBinder>