<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        @external .node;
        @external .edge;
        .main {
            display: flex;
            flex-direction: column;
            align-items: stretch;
        }

        .focusPanel {
            flex-grow: 1;
            flex-shrink: 1;
            overflow: auto;
        }

        .node text, .edge text {
            font-family: inherit;
        }

        .node a {
            text-decoration: none;
        }

        .edge text {
        }

        .edge path {
        }

        .edge polygon {
            stroke-linejoin: round;
            stroke-linecap:  round;
        }

        .node polygon {
            stroke-linejoin: round;
        }

        .container {

        }

        .settingsBar {
            flex-grow: 0;
            flex-shrink: 0;
            display: flex;
            flex-direction: row;
            padding: 2px;
            margin-top: 5px;
            align-items: center;
        }
        .settingsBarLabel {
            margin-right: 5px;
        }
        .settingsBarFormGroup {
            display: flex;;
            flex-direction: row;
            align-items: baseline;
        }
        .download {
            justify-self: flex-end;
        }
        .spacer {
            flex-grow: 1;
            flex-shrink: 1;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">

        <g:FocusPanel ui:field="focusPanel" addStyleNames="{style.focusPanel}">
            <g:HTML ui:field="imageContainer" addStyleNames="{style.container}"/>
        </g:FocusPanel>

        <g:HTMLPanel addStyleNames="{style.settingsBar} {wp.style.panelFilled}">
            <g:HTMLPanel addStyleNames="{style.settingsBarFormGroup}">
                <g:Label text="Spacing" addStyleNames="{wp.style.formLabel} {style.settingsBarLabel}"/>
                <g:ListBox ui:field="ranksepListBox">
                    <g:item value="0.25">x 0.25</g:item>
                    <g:item value="0.50">x 0.5</g:item>
                    <g:item value="0.75">x 0.75</g:item>
                    <g:item value="1.00">x 1</g:item>
                    <g:item value="1.25">x 1.25</g:item>
                    <g:item value="1.50">x 1.5</g:item>
                    <g:item value="1.75">x 1.75</g:item>
                    <g:item value="2.00">x 2</g:item>
                    <g:item value="2.25">x 2.25</g:item>
                    <g:item value="2.50">x 2.5</g:item>
                    <g:item value="2.75">x 2.75</g:item>
                    <g:item value="3.00">x 3</g:item>
                </g:ListBox>
            </g:HTMLPanel>
            <div class="{style.spacer}"/>
            <g:Button ui:field="downloadButton" title="download" addStyleNames="{style.download} {wp.buttons.btnGlyph} {wp.buttons.download}"/>
        </g:HTMLPanel>

    </g:HTMLPanel>
</ui:UiBinder>