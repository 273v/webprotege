<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .main {
            /*width: 100%;*/
            /*height: 100%;*/
        }
        .labelHeader {
            display: flex;
            flex-direction: row;
            width: 100%;
            align-items: center;
        }
        .helpIcon {
            justify-self: flex-end;
            width: 1.7em;
            height: 1.7em;
        }
        .label {
            flex-grow: 1;
            flex-shrink: 1;
        }
        .limitedValuesMessage {
            color: literal("var(--tertiary--color)");
            background-color: rgb(255, 250, 230);
            padding: 4px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{wp.style.formGroup} {style.main}">
        <g:HTMLPanel addStyleNames="{style.labelHeader}">
            <g:Label ui:field="label" addStyleNames="{wp.style.formLabel} {style.label}"/>
            <g:HTMLPanel ui:field="helpIcon" addStyleNames="{wp.style.helpIcon} {style.helpIcon}"/>
        </g:HTMLPanel>
        <g:SimplePanel ui:field="editorHolder"/>
        <g:Label ui:field="limitedValuesDisplayedMessage" visible="false" addStyleNames="{style.limitedValuesMessage}"/>
    </g:HTMLPanel>
</ui:UiBinder>
