<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:form="urn:import:edu.stanford.bmir.protege.web.client.form">
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .main {
            display: flex;
            flex-direction: row;
            align-items: baseline;
        }
        .numberColumn {
            flex-grow: 0;
            flex-shrink: 0;
            margin-right: 1.5em;
        }
        .number {
            background-color: literal("var(--tertiary--color)");
            color: literal("var(--primary--background-color)");
            border-radius: 50%;
            padding: 0.2em;
            font-weight: bold;
            font-size: 1.4em;
            width: 1.6em;
            height: 1.6em;
            line-height: 1.6em;
            text-align: center;
        }
        .elementColumn {
            flex-grow: 1;
            flex-shrink: 1;
        }
        .settingsRow div {
            margin-right: 2em;
        }
        .typeView {
            margin: 1.5em;
            margin-left: 3em;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:HTMLPanel addStyleNames="{style.numberColumn}">
            <g:Label ui:field="numberField" addStyleNames="{style.number}"/>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{style.elementColumn}">
            <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
                <g:Label text="Element Id" addStyleNames="{wp.style.formLabel}"/>
                <g:TextBox ui:field="elementIdField"/>
            </g:HTMLPanel>
            <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
                <g:Label text="Label" addStyleNames="{wp.style.formLabel}"/>
                <form:LanguageMapEditor ui:field="labelEditor"/>
            </g:HTMLPanel>
            <g:HTMLPanel addStyleNames="{wp.style.formGroupRow}">
                <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
                    <g:Label text="Optionality" addStyleNames="{wp.style.formLabel}"/>
                    <g:RadioButton name="optionality" text="Optional" ui:field="optionalRadio"/>
                    <g:RadioButton name="optionality" text="Required" ui:field="requiredRadio"/>
                </g:HTMLPanel>
                <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
                    <g:Label text="Repeatability" addStyleNames="{wp.style.formLabel}"/>
                    <g:RadioButton name="repeatability" text="Non-repeatable" ui:field="nonRepeatableRadio"/>
                    <g:RadioButton name="repeatability" text="Repeatable (Vertically)" ui:field="repeatableVerticallyRadio"/>
                    <g:RadioButton name="repeatability" text="Repeatable (Horizontally)" ui:field="repeatableHorizontallyRadio"/>
                </g:HTMLPanel>
            </g:HTMLPanel>
            <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
                <g:Label text="Help" addStyleNames="{wp.style.formLabel}"/>
                <form:LanguageMapEditor ui:field="helpEditor"/>
            </g:HTMLPanel>
            <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
                <g:Label text="Field Type" addStyleNames="{wp.style.formLabel}"/>
                <g:ListBox visibleItemCount="1" ui:field="typesComboBox"/>
                <g:SimplePanel ui:field="fieldEditorContainer" addStyleNames="{style.typeView}"/>
            </g:HTMLPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
