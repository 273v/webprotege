<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:popupmenu="urn:import:edu.stanford.bmir.protege.web.client.library.popupmenu"
>

    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>

    <ui:style>
        .ownerField {
            flex-basis: 200px;
            display: inline-block;
            align-items: baseline;
        }
        .ownerIconField {
            display: inline-block;
            align-items: baseline;
            padding-right: 5px;
        }
    </ui:style>

    <g:HTMLPanel addStyleNames="{wp.projectList.row}">
        <g:Label ui:field="displayNameField" addStyleNames="{wp.projectList.projectNameCol}" title="Click to open"/>
        <g:HTMLPanel addStyleNames="{wp.projectList.ownerCol}">
            <g:SimplePanel ui:field="ownerIconField" addStyleNames="{style.ownerIconField}"/>
            <g:Label ui:field="ownerField" addStyleNames="{style.ownerField}"/>
        </g:HTMLPanel>
        <g:Label ui:field="lastOpenedAtField" addStyleNames="{wp.projectList.lastOpenCol}"/>
        <g:Label ui:field="modifiedAtField" addStyleNames="{wp.projectList.lastModifiedCol}"/>
        <popupmenu:MenuButton ui:field="menuButton" addStyleNames="{wp.projectList.menuButtonCol}"/>
    </g:HTMLPanel>
</ui:UiBinder>