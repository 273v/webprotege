<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
        >

    <ui:style>

        .user-image {
            background-image: url("images/user.png");
            background-repeat: no-repeat;
            padding-left: 20px;
        }

        .author {
            /*font-size: 12px;*/
            font-weight: bold;
            padding-bottom: 2px;
        }

        .date {
            font-size: 10px;
            color: #808080;
            padding-left: 2px;
        }

        .body {
            /*font-size: 12px;*/
            color: #676767;
            border: none;
        }

        .linksbar {
            position: absolute;
            right: 0px;
        }
        .links {
            font-weight: bold;
            font-size: 12px;
            color: #464646;
        }
        .links : hover {
            color: #648dbe !important;
        }
    </ui:style>


    <g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{style.user-image}">
            <g:InlineLabel addStyleNames="{style.author}" ui:field="authorField"/>
            <g:InlineLabel addStyleNames="{style.date}" ui:field="dateField"/>
            <g:HTML addStyleNames="{style.body}" ui:field="bodyField"/>
        </g:HTMLPanel>
        <!--<div style="width: 100%; height: 16px; margin-right: 4px;">-->
            <!--<span style="position: absolute; right: 0px;"><g:Anchor text="Reply" addStyleNames="{style.links}" ui:field="replyAnchor"/></span>-->
        <!--</div>-->
        <!--<notes:ReplyEditorPanel ui:field="replyEditor" visible="false"/>-->
    </g:HTMLPanel>
</ui:UiBinder>