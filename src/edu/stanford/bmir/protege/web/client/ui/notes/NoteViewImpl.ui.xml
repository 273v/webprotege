<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:form="urn:import:com.gwtext.client.widgets.form"
             xmlns:timelabel="urn:import:edu.stanford.bmir.protege.web.client.ui.library.timelabel"
        >

    <ui:style>

        .user-image {
            background-image: url("images/user.png");
            background-repeat: no-repeat;
            padding-left: 20px;
        }

        .author {
            font-weight: bold;
            padding-bottom: 2px;
            color: #648dbe;
        }

        .date {
            font-size: 10px;
            color: #808080;
            padding-left: 2px;
            display: inline;
        }

        .body {
            color: #676767;
            border: none;
        }
        .links : hover {
            color: #648dbe !important;
        }
    </ui:style>


    <g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{style.user-image}">
            <g:InlineLabel addStyleNames="{style.author}" ui:field="authorField"/>
            <timelabel:ElapsedTimeLabel addStyleNames="{style.date}" ui:field="dateField"/>
            <g:HTML addStyleNames="{style.body}" ui:field="bodyField"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>